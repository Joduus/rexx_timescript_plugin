{
  "name": "Timescript Plugin",
  "version": "0.1",
  "description": "Das Timescript in Pluginform",
  "manifest_version": 2,
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*/calendar_list_widget.php*"],
      "run_at": "document_idle",
      "all_frames": true,
      "js": [
        "Module.js",
        "ModuleCollection.js",
        "TimeHandler.js",
        "TimeCalculator.js",
        "TimeEntries.js",
        "TimeEntryWatcher.js",
        "NotificationHandler.js",
        "WorktimeHandler.js",
        "BreaktimeHandler.js",
        "WorktimeLeftHandler.js",
        "BreaktimeLeftHandler.js",
        "WorktimeNotificator.js",
        "BreaktimeNotificator.js",
        "Timemanagement.js",
        "Options.js",
        "OptionsProvider.js",
        "TimeEntryProvider.js",
        "contentScript.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  }
}